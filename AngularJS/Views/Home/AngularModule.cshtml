
@{
    ViewData["Title"] = "AngularModule";
}

<script src="~/js/Angular.js"></script>

<div ng-app="myApp" ng-controller="myController" ng-init="quantity=1;price=5">

    <h2> {{adi}} {{soyadi}}</h2>

    Miktar : <input type="text" ng-model="quantity" />
    Fiyat : <input type="text" ng-model="price" />

    Toplam Tutar : {{quantity * price}}

    <ul>
        <li ng-repeat="name in names"> {{name}}</li>
    </ul>

    <br />
    <br />

    Urun Adı Arama : <input type="text" ng-model="urunadi" />

    <ul>
        <li ng-repeat="product in products | filter : urunadi "> Urun Adı :  {{product.name}} , Fiyat : {{product.price}}</li>
    </ul>

    <br />
    <br />

    Adı : <input type="text" ng-model="adi" />

    <p>{{adi | uppercase}}</p>
    <p>{{adi | lowercase}}</p>

</div>



<script>
    var app = angular.module("myApp", []);

    app.controller("myController", function ($scope) {

        $scope.adi = "Ahmet";
        $scope.soyadi = "Taş";
        $scope.names = ['Ahmet', 'Mehmet', 'Dursun', 'Fadime'];
        $scope.products = [
            { name: 'Elma', price: 100 },
            { name: 'Armut', price: 12 },
            { name: 'Karpuz', price: 120 },
            { name: 'İncir', price: 20 }
        ];
    });

</script>

